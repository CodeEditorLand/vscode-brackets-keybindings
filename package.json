{
	"name": "brackets-keybindings",
	"displayName": "Brackets Keymap",
	"version": "0.0.1",
	"private": false,
	"description": "Popular Brackets keybindings for VS Code.",
	"keywords": [
		"land"
	],
	"homepage": "HTTPS://GitHub.Com/CodeEditorLand/LandBracketsKeybindings#readme",
	"bugs": {
		"url": "HTTPS://GitHub.Com/CodeEditorLand/LandBracketsKeybindings/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+HTTPS://github.com/CodeEditorLand/LandBracketsKeybindings.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "üåÜ‚ÄÅLand‚ÄÅ‚Äî",
		"email": "Land@PlayForm.Cloud",
		"url": "HTTPS://Land.PlayForm.Cloud"
	},
	"type": "module",
	"scripts": {
		"Document": "Document 'Source/**/*.ts'",
		"prepublishOnly": "Build 'Source/**/*.ts'"
	},
	"contributes": {
		"keybindings": [
			{
				"command": "workbench.action.files.openFileFolder",
				"key": "ctrl+alt+o",
				"mac": "alt+cmd+o"
			},
			{
				"command": "workbench.action.closeAllEditors",
				"key": "ctrl+shift+w",
				"mac": "shift+cmd+w"
			},
			{
				"command": "expandLineSelection",
				"key": "ctrl-l",
				"when": "textInputFocus"
			},
			{
				"command": "cursorColumnSelectUp",
				"key": "shift+alt+up",
				"when": "textInputFocus"
			},
			{
				"command": "cursorColumnSelectDown",
				"key": "shift+alt+down",
				"when": "textInputFocus"
			},
			{
				"command": "editor.action.copyLinesDownAction",
				"key": "ctrl+d",
				"mac": "cmd+d",
				"when": "editorTextFocus && !editorReadonly"
			},
			{
				"command": "editor.action.deleteLines",
				"key": "shift+cmd+d",
				"when": "textInputFocus && !editorReadonly"
			},
			{
				"command": "editor.action.moveLinesUpAction",
				"key": "ctrl+shift+up",
				"mac": "cmd+ctrl+up",
				"when": "editorTextFocus && !editorReadonly"
			},
			{
				"command": "editor.action.moveLinesDownAction",
				"key": "ctrl+shift+down",
				"mac": "cmd+ctrl+down",
				"when": "editorTextFocus && !editorReadonly"
			},
			{
				"command": "editor.action.blockComment",
				"key": "ctrl+shift+/",
				"mac": "alt+cmd+/",
				"when": "editorTextFocus && !editorReadonly"
			},
			{
				"command": "editor.action.startFindReplaceAction",
				"key": "ctrl+shift+h",
				"mac": "alt+cmd+shift+f",
				"when": "editorFocus || editorIsOpen"
			},
			{
				"command": "selectAllSearchEditorMatches",
				"key": "alt+f3",
				"mac": "cmd+ctrl+g",
				"when": "inSearchEditor && inSearchEditor"
			},
			{
				"command": "editor.action.startFindReplaceAction",
				"key": "ctrl+h",
				"mac": "alt+cmd+f",
				"when": "editorFocus || editorIsOpen"
			},
			{
				"command": "workbench.action.toggleSidebarVisibility",
				"key": "ctrl+alt+h",
				"mac": "cmd+shift+h"
			},
			{
				"command": "scrollLineUp",
				"key": "ctrl+up",
				"mac": "alt+ctrl+up",
				"when": "textInputFocus"
			},
			{
				"command": "scrollLineDown",
				"key": "ctrl+down",
				"mac": "alt+ctrl+down",
				"when": "textInputFocus"
			},
			{
				"command": "workbench.action.quickOpen",
				"key": "ctrl+shift+o"
			},
			{
				"command": "workbench.action.gotoLine",
				"key": "ctrl-g",
				"mac": "cmd-g"
			},
			{
				"command": "workbench.action.gotoSymbol",
				"key": "ctrl-t",
				"mac": "cmd-t"
			},
			{
				"command": "workbench.action.showAllSymbols",
				"key": "ctrl+shift+t",
				"mac": "cmd+shift+t"
			},
			{
				"command": "editor.action.revealDefinition",
				"key": "ctrl-j",
				"mac": "cmd+j",
				"when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
			},
			{
				"command": "editor.action.marker.next",
				"key": "f8",
				"mac": "cmd+'",
				"when": "editorFocus"
			},
			{
				"command": "workbench.action.nextEditor",
				"key": "ctrl+pagedown"
			},
			{
				"command": "workbench.action.previousEditor",
				"key": "ctrl+pageup"
			},
			{
				"command": "extension.liveServer.goOnline",
				"key": "ctrl+alt+p",
				"mac": "alt+cmd+p"
			}
		]
	},
	"dependencies": {
		"jsonfile": "6.1.0"
	},
	"devDependencies": {
		"@playform/build": "0.0.7",
		"@playform/document": "0.0.6"
	},
	"publishConfig": {
		"access": "public"
	},
	"icon": "brackets-keyboard.png"
}
